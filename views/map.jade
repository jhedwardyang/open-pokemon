html
	head
		title Adventure Mode
		link(rel="stylesheet", type="text/css", href="/assets/bootstrap-3.2.0-dist/css/bootstrap-theme.css")
		link(rel="stylesheet", type="text/css", href="/css/map.css")
		link(rel="stylesheet", type="text/css", href="/css/progress.css")
		link(rel="icon", type="image/png", href="/images/favicon.png?")
		meta(name="viewport", content="width=1080, initial-scale=.3, user-scalable=no")
		meta(name="mobile-web-app-capable", content="yes")
	body(style="position:relative")
		button#challenge(style="z-index:300;position:absolute;top:30px;left:30px;width:300px;height:80px;")
		#overlay
			img(src="/images/overlay.png")
			img#marker(src="/images/marker.png")
		#map
		#battle(style="opacity:0")
			img(src="/images/battle/map-road.png", class="battle-map")

			div#hp1.meter.green.nostripes.hp
				span(style="width: 100%")
			img#pokemon1.pokemon(src="/images/pokemon/charizard.gif")
			img#shadow1.shadow(src="/images/pokemon/shadow.png")

			div#hp2.meter.green.nostripes.hp
				span(style="width: 100%")
			img#pokemon2.pokemon(src="/images/pokemon/charizard-(1).gif")
			img#shadow2.shadow(src="/images/pokemon/shadow.png")

			div#test
			input#ee(style="hidden", name="ee", value="#{email}")
			audio#m1(src="/audio/battle.mp3", preload="auto", loop)
			audio#m2(src="/audio/walking.mp3", autoplay, loop)
		script(type="text/javascript", src="/assets/jquery-2.1.1.min/jquery-2.1.1.min.js")
		script type="text/javascript", src="/assets/bootstrap-3.2.0-dist/js/bootstrap.js")
		
		script(type="text/javascript", src="/assets/audiojs/audio.min.js")

		script(src="https://cdn.socket.io/socket.io-1.1.0.js")
		script(src="https://maps.googleapis.com/maps/api/js?v=3.exp")
		script(type="text/javascript" src="/js/map.js")